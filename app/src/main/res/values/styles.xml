<!-- res/values/styles.xml -->
<resources>

    <!-- Tema base de la app -->
    <style name="Theme.ProyectoExtraordinario" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="buttonStyle">@style/Widget.ProyectoExtraordinario.Button</item>
    </style>

    <style name="Widget.ProyectoExtraordinario.TitleTextView" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo para los botones -->
    <style name="Widget.ProyectoExtraordinario.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <!-- Estilo bÃ¡sico para RecyclerView (opcional, para padding interno) -->
    <style name="Widget.ProyectoExtraordinario.RecyclerView" parent="">
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Widget.ProyectoExtraordinario.TextView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
