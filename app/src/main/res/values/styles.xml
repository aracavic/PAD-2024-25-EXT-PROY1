<resources>

    <!-- Estilo para el tÃ­tulo principal -->
    <style name="TitleTextView" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!-- Estilo para los botones -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Estilo para RecyclerView -->
    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- Estilo para textos secundarios -->
    <style name="TextView" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>


</resources>